#!/usr/bin/env bash
# This script prints all processes with the word bash
for pid_dir in /proc/*/; do
    # Check if the directory represents a valid process
    if [ -f "$pid_dir/cmdline" ]; then
        # Get the process name from the command line file
        cmd_line=$(tr -d '\0' < "$pid_dir/cmdline" 2>/dev/null)

        # Check if the process name contains the word "bash"
        if [[ "$cmd_line" == *bash* ]]; then
            # Extract the PID from the directory name
            pid=$(basename "$pid_dir")

            # Print the PID and process name
            echo "$pid $cmd_line"
        fi
    fi
done
